<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="150dp"
        android:layout_marginStart="20dp"
        android:id="@+id/editFavouriteName"
        android:hint="@string/favourites_name_hint"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="#b9b5b5"
        android:backgroundTint="@color/colorAccentOrange" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="150dp"
        android:layout_marginStart="20dp"
        android:id="@+id/editFavouriteAddress"
        android:hint="@string/favourites_address_hint"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="#b9b5b5"
        android:backgroundTint="@color/colorAccentOrange" />
</LinearLayout>