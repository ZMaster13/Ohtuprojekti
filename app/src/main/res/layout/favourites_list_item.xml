<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/favourites_item"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryDark">
    </TextView>

    <ImageButton
        android:id="@+id/favourites_star_unfilled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_star_0"
        android:contentDescription="@string/favourites_verify_title"
        android:padding="5dp"
        android:layout_gravity="end"
        android:background="@color/colorWhite">
    </ImageButton>

    <ImageButton
        android:id="@+id/favourites_star_filled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_star_10"
        android:contentDescription="@string/favourites_verify_title"
        android:padding="5dp"
        android:layout_gravity="end"
        android:background="@color/colorWhite">
    </ImageButton>

</GridLayout>